<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:weightSum="1"
    android:id="@+id/linear_layout_formulario_rutina">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_routine" />

        <EditText
            android:id="@+id/formulario_nombre_rutina"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monday" />

            <EditText
                android:id="@+id/formulario_lun_ejer1"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_lun_ejer2"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_lun_ejer3"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuesday" />

            <EditText
                android:id="@+id/formulario_mar_ejer1"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_mar_ejer2"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_mar_ejer3"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wednesday" />

            <EditText
                android:id="@+id/formulario_mie_ejer1"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_mie_ejer2"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_mie_ejer3"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thursday" />

            <EditText
                android:id="@+id/formulario_jue_ejer1"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_jue_ejer2"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_jue_ejer3"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friday" />

            <EditText
                android:id="@+id/formulario_vie_ejer1"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_vie_ejer2"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_vie_ejer3"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturday" />

            <EditText
                android:id="@+id/formulario_sab_ejer1"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_sab_ejer2"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_sab_ejer3"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunday" />

            <EditText
                android:id="@+id/formulario_dom_ejer1"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_dom_ejer2"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/formulario_dom_ejer3"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bton_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/form_to_fill_in" />
</LinearLayout>